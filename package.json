{
	"private": true,
	"name": "super-app",
	"license": "MIT",
	"packageManager": "yarn@1.22.19",
	"engines": {
		"node": ">=18"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"postinstall": "patch-package",
		"build": "turbo run build",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
	},
	"devDependencies": {
		"prettier": "^3.1.1",
		"turbo": "^2.0.6"
	}
}
