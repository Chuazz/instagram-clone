{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"ANDROID_HOME",
		"JAVA_HOME"
	],
	"tasks": {
		"dev:admin": {
			"cache": false,
			"persistent": true
		},
		"dev:mobile": {
			"cache": false,
			"persistent": true,
			"inputs": [
				".env"
			],
			"env": [
				"API_URL"
			],
			"passThroughEnv": [
				"API_URL"
			]
		},
		"dev:package": {
			"cache": false,
			"persistent": true
		},
		"build:package": {
			"dependsOn": [
				"^build:package"
			],
			"outputs": [
				"dist/**"
			]
		}
	}
}